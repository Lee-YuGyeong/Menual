<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


            <Button
                android:id="@+id/btn1"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:background="@drawable/phone_1"/>


            <Button
                android:id="@+id/btn2"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:background="@drawable/mail_1"
                android:layout_marginLeft="40dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/camera_1"/>


        <Button
            android:id="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/kakao_1"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/btn5"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/bus_1"/>


        <Button
            android:id="@+id/btn6"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/youtube_1"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>


</LinearLayout>

